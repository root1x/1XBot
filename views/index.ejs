<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title data-tag="title"></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <nav class="navbar is-dark">
        <div class="navbar-brand">
            <a class="navbar-item" href="#">
                <img src="images/logo.png" width="112" height="28">
            </a>
            <div class="navbar-burger burger" data-target="navbar">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="navbar" class="navbar-menu">
            <div class="navbar-start">
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="field is-grouped">
                        <p class="control">
                            <a class="button is-twitch" href="logout">
                                <span data-tag="logout"></span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <section class="section">
        <div class="container is-centered" style="line-height: 40px">
            <h1 class="title" data-tag="permitted-channels"></h1>
            <a class="button is-twitch" href="/<%=channel.name.replace('#', '');%>"><%=channel.name.replace('#', '');%></a>
            <% channels.forEach(function (permittedChannel) { %>
                <a class="button is-twitch" href="/<%=permittedChannel.name;%>"><%=permittedChannel.name;%></a>
            <% }); %>
        </div>
    </section>

    <script src="https://use.fontawesome.com/releases/v5.0.0/js/all.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="js/script.js"></script>
    <script>
        $(document).ready(function () {
            translate = new Translate();
            translate.init('data-tag', '<%= channel.language %>');
            translate.process();
        });
    </script>
</body>

</html>